
@{
    ViewBag.Title = "Fields";
}

@model Mini_DBMS.Models.Table

<script src="~/Scripts/customs/addAll.js"></script>
<script src="~/Scripts/customs/addindex.js"></script>
<script src="~/Scripts/customs/addPrimaryKey.js"></script>
<script src="~/Scripts/customs/addForeignKey.js"></script>

<div class="pull-left">
    @Html.ActionLink("Go back", "GoToTables", "Home")
</div>

<h2>Fields for @Model.Name</h2>

<table class="table">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                Type
            </th>
            <th>Length</th>
            <th>
                Allow nulls
            </th>
        </tr>
    </thead>

    <tbody>
        @foreach (var field in Model.Fields)
        {
            <tr>

                <td>
                    @field.Name
                </td>
                <td>
                    @field.Type.ToString()
                </td>
                <td>
                    @field.Length
                </td>
                <td>
                    <input type="checkbox" checked="@field.AllowNull" disabled="disabled" />
                </td>
                @if (@Model.Fields.Count != 0)
                {
                    <td>
                        <input type="button" value="Set as foreign key" onclick="AddForeignKey(@field.Name)"/>
                    </td>
                }
            </tr>
        }
    </tbody>
</table>

<div class="pull-right">
    <input type="button" value="Add field" onclick="AddFields()" />
</div>
@if (Model.Fields.Count != 0)
{
    <div class="pull-right">
        <input type="button" value="Add index" onclick="AddIndex()" />
    </div>
}
@if (@Model.Fields.Count != 0)
{
    <div class="pull-right">
        <input type="button" value="Add primary key" onclick="AddPrimaryKey()" />
    </div>
}

<div id="myModal" class="modal fade" data-backdrop="static">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            </div>
            <div class="modal-body">

            </div>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>
<!-- /.modal -->
