@{
    ViewBag.Title = "Home Page";
}

@model List<Mini_DBMS.Models.Database>

<script src="~/Scripts/customs/addAll.js"></script>


<div class="container" style="padding-top: 5%">

    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>No of tables</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var database in @Model)
            {
            <tr>
                <td>@database.Name</td>
                <td>@database.Tables.Count</td>
                <td>
                    <input type="button" value="Delete" onclick="location.href='@Url.Action("DeleteDatabase", "Home", new { databaseName = database.Name })'" />
                </td>
            </tr>
            }
        </tbody>
    </table>

    <div class="pull-right">
        <input type="button" value="Create database" onclick="CreateDatabase()" />
    </div>

</div>

<div id="myModal" class="modal fade" data-backdrop="static">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            </div>
            <div class="modal-body">

            </div>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>
<!-- /.modal -->